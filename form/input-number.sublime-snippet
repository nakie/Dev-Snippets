<snippet>
	<!-- Snippet Purpose: Insert Native Number Field -->
	<!-- Regex Pattern -->
	<!-- ${1/^(\w+)|(?:\s(\w+))(\s+)?/(?1\l$1:)(?2\u$2:)/g} -->
	<!-- Converts Proper Spacing/Case into Camel Case -->
	<!-- E.G.  Agent First Name becomes agentFirstName -->
	<!-- This allows automatic creation of ID's and Field Names from Label!!!!!!!! -->

	<content><![CDATA[
<div class="inputGroup">
	<label for="${1/^(\w+)|(?:\s(\w+))(\s+)?/(?1\l$1:)(?2\u$2:)/g}Num" >${1}</label>	
	<input type="number" name="${1/^(\w+)|(?:\s(\w+))(\s+)?/(?1\l$1:)(?2\u$2:)/g}Num" id="${1/^(\w+)|(?:\s(\w+))(\s+)?/(?1\l$1:)(?2\u$2:)/g}Num" ${2:value="${3}"} ${4:min="${5}"} ${6:max="${7}"} ${8:step="${9}"} ${10:required="required"} >
</div>

]]></content>
	<tabTrigger>i:num</tabTrigger>
</snippet>
